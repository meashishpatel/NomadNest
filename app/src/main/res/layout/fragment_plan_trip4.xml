<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.trip.PlanTripFragment4">

    <TextView
        android:id="@+id/titlemodify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modify Plan"
        android:textAppearance="@style/personal_info_title"
        android:gravity="center"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/destination"
        android:layout_width="343dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titlemodify"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:elevation="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/destination_ic"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="243dp"
                    android:layout_height="20dp"
                    android:text="@string/destination"
                    android:textAppearance="@style/budgettitle"
                    android:lineSpacingExtra="3sp"
                    android:translationY="-1.53sp"
                    android:gravity="top" />
                <TextView
                    android:id="@+id/destinationTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paris"
                    android:textAppearance="@style/budgetsubstring"
                    android:lineSpacingExtra="1sp"
                    android:translationY="-0.74sp"
                    android:gravity="top" />
            </LinearLayout>
            <ImageView
                android:id="@+id/editdestination"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/edit_ic"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/dates"
        android:layout_width="343dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/destination"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:elevation="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/dates_ic"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="243dp"
                    android:layout_height="20dp"
                    android:text="@string/dates"
                    android:textAppearance="@style/budgettitle"
                    android:lineSpacingExtra="3sp"
                    android:translationY="-1.53sp"
                    android:gravity="top" />
                <TextView
                    android:id="@+id/dateTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/jantojan"
                    android:textAppearance="@style/budgetsubstring"
                    android:lineSpacingExtra="1sp"
                    android:translationY="-0.74sp"
                    android:gravity="top" />
            </LinearLayout>
            <ImageView
                android:id="@+id/editdate"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/edit_ic"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/budget"
        android:layout_width="343dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dates"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:elevation="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/budget_ic"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="243dp"
                    android:layout_height="20dp"
                    android:text="@string/budget"
                    android:textAppearance="@style/budgettitle"
                    android:lineSpacingExtra="3sp"
                    android:translationY="-1.53sp"
                    android:gravity="top" />
                <TextView
                    android:id="@+id/budgetTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cheap"
                    android:textAppearance="@style/budgetsubstring"
                    android:lineSpacingExtra="1sp"
                    android:translationY="-0.74sp"
                    android:gravity="top" />
            </LinearLayout>
            <ImageView
                android:id="@+id/editbudget"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/edit_ic"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:id="@+id/confirmbtn"
        android:layout_width="343dp"
        android:layout_height="48dp"
        android:background="@drawable/blue_btn_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm"
                android:textAppearance="@style/text_button_login"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>